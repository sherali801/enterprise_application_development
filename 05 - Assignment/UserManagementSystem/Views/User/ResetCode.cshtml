@{
	ViewBag.Title = "Reset Code";
}

@section navbar {
	@Html.Partial("_NavbarPublic")
}

<div class="col-6 mx-auto">
	@{
		if (ViewBag.Status != null)
		{
			if (!ViewBag.Status)
			{
				<div class="alert alert-danger">
					@foreach (string message in ViewBag.Messages)
					{
						@message<br />
					}
				</div>
			}
		}
	}
</div>

<form action="@Url.Content("~/User/ResetCode")" method="post">
	<fieldset class="form-group">
		<legend class="text-center">Reset Password</legend>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="resetCode">Reset Code</label>
			<div class="col-4">
				<input class="form-control" type="text" name="resetCode" value="@ViewBag.ResetCode" id="resetCode" placeholder="Reset Code" required autofocus>
			</div>
		</div>
		<div class="form-group row">
			<div class="offset-sm-4 col-4">
				<input class="btn btn-block btn-primary" type="submit" name="submit" value="Confirm">
			</div>
		</div>
	</fieldset>
</form>