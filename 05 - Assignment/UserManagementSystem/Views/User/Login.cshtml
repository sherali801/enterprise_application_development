@{
	ViewBag.Title = "Login";
}

@section navbar {
	@Html.Partial("_NavbarPublic")
}

<div class="col-6 mx-auto">
	@{
		if (ViewBag.Status != null)
		{
			if (!ViewBag.Status)
			{
				<div class="alert alert-danger">
					@foreach (string message in ViewBag.Messages)
					{
						@message<br />
					}
				</div>
			}
		}
	}
</div>

<form action="@Url.Content("~/User/Login")" method="post">
	<fieldset class="form-group">
		<legend class="text-center">Login</legend>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="login">Login</label>
			<div class="col-4">
				<input class="form-control" type="text" name="login" value="@ViewBag.Login" id="login" placeholder="Login" aria-describedby="loginHelp" maxlength="50" required autofocus>
				<small id="loginHelp" class="form-text text-muted">At max 50 character long.</small>
			</div>
		</div>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="password">Password</label>
			<div class="col-4">
				<input class="form-control" type="password" name="password" value="@ViewBag.Password" id="password" placeholder="Password" aria-describedby="passwordHelp" minlength="8" maxlength="15" required>
				<small id="passwordHelp" class="form-text text-muted">8-15 characters, contain letters, numbers, special characters.</small>
			</div>
		</div>
		<div class="form-group row">
			<div class="offset-sm-4 col-4">
				<input class="btn btn-block btn-primary" type="submit" name="submit" value="Login">
			</div>
		</div>
	</fieldset>
</form>

<form action="@Url.Content("~/User/ForgotPassword")" method="post">
	<fieldset class="form-group">
		<legend class="text-center">Forgot Password?</legend>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="email">Email</label>
			<div class="col-4">
				<input class="form-control" type="email" name="email" value="@ViewBag.Email" id="email" placeholder="Email" required>
			</div>
		</div>
		<div class="form-group row">
			<div class="offset-sm-4 col-4">
				<input class="btn btn-block btn-primary" type="submit" name="submit" value="Reset Password">
			</div>
		</div>
	</fieldset>
</form>