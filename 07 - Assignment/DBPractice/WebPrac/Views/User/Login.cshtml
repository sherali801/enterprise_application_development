@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<form action="@Url.Content("~/User/Login")" method="post">
	<fieldset class="form-group">
		<legend class="text-center">Login</legend>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="Login">Login</label>
			<div class="col-4">
				<input class="form-control" type="text" name="Login" value="@ViewBag.Login" id="Login" placeholder="Login" aria-describedby="LoginHelp" minlength="1" maxlength="50" required autofocus>
				<small id="LoginHelp" class="form-text text-muted">At max 50 characters.</small>
			</div>
		</div>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="Password">Password</label>
			<div class="col-4">
				<input class="form-control" type="password" name="Password" id="Password" placeholder="Password" aria-describedby="PasswordHelp" minlength="1" maxlength="50" required>
				<small id="PasswordHelp" class="form-text text-muted">At max 50 characters.</small>
				<small class="form-text text-muted"><a href='@Url.Content("~/User/ForgotPassword")'>Forgot Password?</a></small>
			</div>
		</div>
		<div class="form-group row">
			<div class="offset-sm-4 col-4">
				<input class="btn btn-block btn-outline-primary" type="submit" name="submit" value="Login">
			</div>
		</div>
	</fieldset>
</form>