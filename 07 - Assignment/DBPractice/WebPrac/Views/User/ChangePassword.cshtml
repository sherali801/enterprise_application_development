@{
	ViewBag.Title = "Change Password";
	Layout = "~/Views/Shared/_MyProductLayout.cshtml";
}

<form action="@Url.Content("~/User/ChangePassword")" method="post">
	<fieldset class="form-group">
		<legend class="text-center">Change Password</legend>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="OldPassword">Old Password</label>
			<div class="col-4">
				<input class="form-control" type="password" name="OldPassword" value="@ViewBag.OldPassword" id="OldPassword" placeholder="Old Password" required autofocus>
			</div>
		</div>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="NewPassword">New Password</label>
			<div class="col-4">
				<input class="form-control" type="password" name="NewPassword" id="NewPassword" placeholder="New Password" required>
			</div>
		</div>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="ConfirmPassword">Confirm Password</label>
			<div class="col-4">
				<input class="form-control" type="password" name="ConfirmPassword" id="ConfirmPassword" placeholder="Confirm Password" required>
			</div>
		</div>
		<div class="form-group row">
			<div class="offset-sm-4 col-4">
				<input class="btn btn-block btn-outline-primary" type="submit" name="submit" value="Change Password">
			</div>
		</div>
	</fieldset>
</form>