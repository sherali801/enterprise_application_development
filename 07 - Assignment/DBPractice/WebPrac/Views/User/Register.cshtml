@model PMS.Entities.UserDTO

@{
	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<form action="@Url.Content("~/User/Save")" method="post" enctype="multipart/form-data">
	<fieldset class="form-group">
		<legend class="text-center">Register</legend>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="Name">Name</label>
			<div class="col-4">
				<input class="form-control" type="text" name="Name" value="@Model.Name" id="Name" placeholder="Name" aria-describedby="NameHelp" minlength="1" maxlength="50" required autofocus>
				<small id="NameHelp" class="form-text text-muted">At max 50 characters.</small>
			</div>
		</div>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="Login">Login</label>
			<div class="col-4">
				<input class="form-control" type="text" name="Login" value="@Model.Login" id="Login" placeholder="Login" aria-describedby="LoginHelp" minlength="1" maxlength="50" required>
				<small id="LoginHelp" class="form-text text-muted">At max 50 characters.</small>
			</div>
		</div>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="Password">Password</label>
			<div class="col-4">
				<input class="form-control" type="password" name="Password" id="Password" placeholder="Password" aria-describedby="PasswordHelp" minlength="1" maxlength="50" required>
				<small id="PasswordHelp" class="form-text text-muted">At max 50 characters.</small>
			</div>
		</div>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="Image">Image</label>
			<div class="col-4">
				<input class="form-control-file" type="file" name="Image" id="Image" required>
			</div>
		</div>
		<div class="form-group row">
			<div class="offset-sm-4 col-4">
				<input class="btn btn-block btn-outline-primary" type="submit" name="submit" value="Register">
			</div>
		</div>
	</fieldset>
</form>