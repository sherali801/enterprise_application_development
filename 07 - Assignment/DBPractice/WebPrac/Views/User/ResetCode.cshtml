@{
	ViewBag.Title = "Reset Code";
	Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<form action="@Url.Content("~/User/ResetCode")" method="post">
	<fieldset class="form-group">
		<legend class="text-center">Reset Code</legend>
		<div class="form-group row">
			<label class="form-control-label col-4 col-form-label text-right" for="ResetCode">Reset Code</label>
			<div class="col-4">
				<input class="form-control" type="text" name="resetCode" value="@ViewBag.ResetCode" id="resetCode" placeholder="Reset Code" required autofocus>
			</div>
		</div>
		<div class="form-group row">
			<div class="offset-sm-4 col-4">
				<input class="btn btn-block btn-outline-primary" type="submit" name="submit" value="Reset Code">
			</div>
		</div>
	</fieldset>
</form>